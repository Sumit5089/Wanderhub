<!-- views/messageHost.ejs -->
<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
    <h3>Send a Message to <%= listing.owner.username %></h3>
    <form action="/listings/<%= listing._id %>/message" method="POST" class="mb-3">
        <div class="mb-3">
            <label for="subject" class="form-label">Subject</label>
            <input type="text" name="subject" id="subject" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea name="message" id="message" cols="30" rows="5" class="form-control" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Send Message</button>
    </form>
</div>
