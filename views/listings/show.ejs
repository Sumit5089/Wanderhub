<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col">
    <h3>Listings Details:</h3>

        <div class="card mt-3" style="width: 25rem;">
            <img src="<%= listing.image%>" class="card-img-top" alt="image">
            <div class="card-body mt-2">
                <p class="card-text text-center"><b><%= listing.title %></b></p>
            </div>
        </div>
    </div>

    <div class="col" id="show-txt">
            <ul>
                <li> <%= listing.title %></li>
                <li> <%= listing.description %></li>
                <li> &#8377; <%= listing.price %></li>
                <li> <%= listing.location %></li>
                <li> <%= listing.country %></li>
            </ul>   
            <br>
            <div class="show-btns">
                <div>
                    <form action="/listings/<%= listing._id %>/edit" method="GET">
                        <input type="submit" value="Edit" class="edit-btn">
                    </form>
                </div>
                <div class="del-btn">
                    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="delete-btn">
                    </form>
                </div>
            </div>

    </div>
    <div class="rate">
        <hr>
        <h4 class="mt-3">Leave a Review</h4>
        <form action="" class="mb-3">
            <div>
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
            </div>
            <div>
                <label for="comment" class="form-label"> Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="3" class="form-control"></textarea>
            </div>
            <button type="submit" class="btnx">Submit</button>
        </form>
    </div>
</div>
   


