<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col">
    <h3><%= listing.title %></h3>

        <div class="card mt-3 listing-card" style="width: 25rem;">
            <img src="<%= listing.image%>" class="card-img-top" alt="image">
            <div class="card-body mt-2">
                <p class="card-text mx-2"><b>Owned By:-</b><i>  <%= listing.owner.username %></i></p>
            </div>
        </div>
    </div>

    <div class="col" id="show-txt">
            <ul>
                <li> <%= listing.title %></li>
                <li> <%= listing.description %></li>
                <li> &#8377; <%= listing.price %></li>
                <li> <%= listing.location %></li>
                <li> <%= listing.country %></li>
            </ul>   
            <br>
            <div class="show-btns">
                <div>
                    <form action="/listings/<%= listing._id %>/edit" method="GET">
                        <input type="submit" value="Edit" class="edit-btn">
                    </form>
                </div>
                <div class="del-btn">
                    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="delete-btn">
                    </form>
                </div>
            </div>
    </div>
    <div class>
        <hr>
        <h4 class="mt-3">Leave a Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="POST"  class="mb-3 needs-validation" novalidate>
            <div>
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required>
            </div>
            <div>
                <label for="comment" class="form-label"> Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="3" class="form-control" required></textarea>
                <div class="invalid-feedback">please submit sime comments for review</div>
            </div>
            <button type=submit class="btnx">Submit</button>
        </form>
        <hr>
        <div class="rate">
            <p><b>All Reviews</b></p>
       <div class="row" >
            <% for(review of listing.reviews)  { %>
                <div class="card col-3 ms-3 mb-3" id="review-box">
                    <div class="card-body " id="review-mbox">
                        <h5 class="card-title">jane doe</h5>
                        <p class="card-text"><%= review.comment %></p>
                        <p class="card-text"><%= review.rating  %> Stars  <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                            <button  type="submit" class="btnxx"><i class="fa-solid fa-trash"></i></button>
                        </form></p>
                    </div>
                    
                </div>
            <% } %>
       </div>
        </div>
    </div>
</div>
   


